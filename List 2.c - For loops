#ifdef ex5
int main(){
int cont, n;
float k;

char op;
do{
printf("|| EX. 5 ||\n");
printf("===========\n\n");
float weight=0;

printf("How many weights? ");
    scanf("%i", &n);
for(cont=0; cont<n; cont++){
    printf("%i weight: ", cont+1);
        scanf("%f", &k);
        weight=weight+k;
}
printf("\n==============================================\n");
printf("The average weight is: %.2f", weight/n);


printf("\n==============================================\n");
printf("\nRepeat? Y for Yes, any for No\n");
    scanf(" %c", &op);
system("cls");
} while (op=='Y' || op=='y');
printf("Thanks!\n\n");

system("pause");
}
#endif // ex5

