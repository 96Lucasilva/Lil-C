#ifdef ex3
int main(){
int n1, cont, age;

char op;
do{
int total=0;
printf("|| EX. 3 ||\n");
printf("===========\n\n");
printf("How many ages? ");
    scanf("%i", &n1);
printf("\n");
for(cont=0; cont<n1; cont++){
    printf("%i age: ", cont+1);
        scanf("%i", &age);
        printf("%i\n", age);
        printf("%i\n", total);
        total=total+age;
        printf("%i\n", total);
}
printf("\n==============================================\n");
printf("The sum of all ages is: %i", total);

printf("\n==============================================\n");
printf("\nRepeat? Y for Yes, any for No\n");
    scanf(" %c", &op);
system("cls");
} while (op=='Y' || op=='y');
printf("Thanks!\n\n");

system("pause");

}
#endif // ex3

