#ifdef ex6
int main(){
int cont, k;

char op;
do{
printf("|| EX. 6 ||\n");
printf("===========\n\n");
int sum=0;
printf("How many numbers? ");
    scanf("%i", &k);
printf("\n");
for(cont=0; cont<=k; cont++){
    printf("%i ", cont);
    sum=sum+cont;
}
printf("\n\n==============================================\n");
printf("Sum of %i numbers: %i", k, sum);


printf("\n==============================================\n");
printf("\nRepeat? Y for Yes, any for No\n");
    scanf(" %c", &op);
system("cls");
} while (op=='Y' || op=='y');
printf("Thanks!\n\n");

system("pause");
}
